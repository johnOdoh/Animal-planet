<%- include('../layouts/header.ejs') %>

    <section class="section" style="position: relative; height: 90vh;">
        <!-- start Quiz button -->
        <div class="start_btn"><button>Start Quiz</button></div>

        <!-- Info Box -->
        <div class="info_box">
            <div class="info-title"><span>Rules of the Quiz</span></div>
            <div class="info-list">
                <div class="info">1. You will have only <span>15 seconds</span> per each question.</div>
                <div class="info">2. There will be a total of 10 questions.</div>
                <div class="info">3. You can't select any option once the countdown ends.</div>
                <div class="info">4. You can't exit from the Quiz while playing.</div>
                <div class="info">5. You'll get points on the basis of your correct answers.</div>
                <div class="info">6. Once you select your answer, it can't be undone.</div>
            </div>
            <div class="buttons">
                <button class="quit">Exit Quiz</button>
                <button class="restart">Continue</button>
            </div>
        </div>

        <!-- Quiz Box -->
        <div class="quiz_box">
            <header>
                <div class="title">Animal Quiz</div>
                <div class="timer">
                    <div class="time_left_txt">Time Left</div>
                    <div class="timer_sec">15</div>
                </div>
                <div class="time_line"></div>
            </header>
            <section>
                <div class="que_text">
                    <!-- Here I've inserted question from JavaScript -->
                </div>
                <div class="option_list">
                    <!-- Here I've inserted options from JavaScript -->
                </div>
            </section>

            <!-- footer of Quiz Box -->
            <footer>
                <div class="total_que">
                    <!-- Here I've inserted Question Count Number from JavaScript -->
                </div>
                <button class="next_btn">Next Question</button>
            </footer>
        </div>

        <!-- Result Box -->
        <div class="result_box">
            <div class="icon">
                <i class="fas fa-crown"></i>
            </div>
            <div class="complete_text">You've completed the Quiz!</div>
            <div class="score_text">
                <!-- Here I've inserted Score Result from JavaScript -->
            </div>
            <div class="buttons">
                <!-- <button class="restart">Play Again</button> -->
                <button class="quit">Play Again</button>
            </div>
        </div>
    </section>

